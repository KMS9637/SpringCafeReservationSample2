<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메인화면"
            android:textSize="30sp"
            android:gravity="center"
            android:background="#FF9800"/>

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/food3"
            android:maxWidth="500dp"
            android:maxHeight="400dp"
            android:adjustViewBounds="true"/>


        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이미지 분류를 해보자!!"
            android:textSize="30sp"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/ch06LsyJoinBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회원가입"/>

            <Button
                android:id="@+id/ch06LsyLoginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="로그인"/>

            <Button
                android:id="@+id/ch06LsyTestPagingBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="테스트유저들1차확인노페이징"/>

            <Button
                android:id="@+id/ch06LsyTestPagingBtn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="테스트유저들페이징2뷰모델버전페이징"/>

            <Button
                android:id="@+id/ch06LsyAiPredictBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ai 이미지 예측 테스트 "/>

            <Button
                android:id="@+id/ch06LsyPayBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="결제 테스트 "/>

            <Button
                android:id="@+id/ch06LsyProfileBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="프로필 화면"/>

        </LinearLayout>



    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>